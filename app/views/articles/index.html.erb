<h1>This is the list of articles</h1>
<p><%= link_to "Create new article", new_article_path %></p>
<table>
			<tr>
				<th>ID</th>
				<th>Title</th>
				<th>Description</th>
			</tr>
<% @articles.each do |a| %>	
			<tr>
				<td><%= a.id %></td>
				<td><%=a.title %></td>
				<td><%=a.description %></td>
				<td><%= link_to 'Edit', edit_article_path(a) %></td>
				<td><%= link_to 'Show', article_path(a) %></td>
			</tr>
<% end %>

</table>